{
    "manifest_version": 2,

    "name": "CS6460",
	"short_name" : "CS6460",
    "description": "Help yourself stay engaged in distance learning",
    "version": "2.3",

    "icons": {
        "16": "assets/icon16.png",                    
        "24": "assets/icon24.png",           
        "32": "assets/icon32.png",
        "64": "assets/icon64.png",
        "128": "assets/icon128.png"
    },
    "background": {
        "scripts": ["js/background.js"] ,
        "persistent": true
     }, 
     "content_scripts": [{
        "matches":    ["*://piazza.com/*"],
        "js":         ["js/content.js"],
        "run_at":     "document_idle",
        "all_frames": false
      }],
     "page_action": {
        "default_title": "CS 6460",
        "default_icon": {                    
            "16": "assets/icon16.png",                    
            "24": "assets/icon24.png",           
            "32": "assets/icon32.png",
            "64": "assets/icon64.png",
            "128": "assets/icon128.png"
        },
        "default_popup": "popup.html"        
    },
    "permissions": [
        "tabs",
        "activeTab",
        "cookies",
        "identity",
        "storage",
        "https://***REMOVED***/",
        "http://api.jquery.com/",
        "https://piazza.com/*",
        "declarativeContent"
    ]
}